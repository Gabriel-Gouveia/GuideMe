<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Style="{StaticResource MainColorBackground}"
             x:Class="GuideMe.MainPage">

    <StackLayout>
        <Frame BackgroundColor="Black">
            <StackLayout Orientation="Horizontal"
                         Margin="100,0,0,0">
                <Image Source="logotipo.png"></Image>
                <Label Text="Guide Me" FontSize="20"></Label>
            </StackLayout>
        </Frame>
        <Entry Margin="15,300,10,0" 
               Placeholder="Digite aqui o ID do ambiente" 
               FontSize="25" 
               TextColor="White" 
               PlaceholderColor="White"
               HorizontalTextAlignment="Center"></Entry>
        <Button Text="Procurar o local" 
                FontSize="25" 
                Margin="30,0,30,0" 
                CornerRadius="20"
                BackgroundColor="#0c0c0d"
                TextColor="White"></Button>
    </StackLayout>
    

</ContentPage>
